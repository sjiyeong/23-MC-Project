<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/light"
    android:orientation="vertical"
    android:id="@+id/MyfragView">
    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/my_photo"
            android:layout_width="104dp"
            android:layout_height="104dp"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/main_img" />
        <ImageView
            android:id="@+id/markerIcon"
            android:layout_width="38dp"
            android:layout_height="48dp"
            android:src="@drawable/markericon"
            android:layout_toRightOf="@id/my_photo"
            android:layout_marginLeft="210dp"
            android:layout_marginTop="50dp"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_toRightOf="@id/my_photo">
            <TextView
                android:id="@+id/TastePlaceList"
                android:layout_width="70dp"
                android:layout_height="19dp"
                android:hint="내 맛집 수"
                android:textStyle="bold"
                android:textSize="16dp"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="99dp"
                android:textAlignment="center" />
            <TextView
                android:id="@+id/listCount"
                android:layout_toRightOf="@id/TastePlaceList"
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:paddingLeft="5dp"
                android:layout_marginTop="100dp"
                android:text="count"
                android:textStyle="bold"
                />
        </RelativeLayout>

        <TextView
            android:id="@+id/name"
            android:layout_width="391dp"
            android:layout_height="32dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/email_border_layout"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textStyle="bold"
            android:hint="uesr_email"
            android:layout_below="@+id/my_photo"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="내 맛집 목록"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:textStyle="bold"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/reMylist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
    </LinearLayout>

</LinearLayout>